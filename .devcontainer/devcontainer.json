// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installOhMyZsh"				: true,
			"configureZshAsDefaultShell"	: true
		},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/sshd:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker": {}
	},

	// Configure tool-specific properties.
	"customizations": {
		"preCreateCommand": "sudo apt-get update && sudo apt-get install -y openssh-server",
		"postCreateCommand": "echo alias manage=\"python /workspaces/ft_transcendence/srcs/requirements/django/manage.py\" >> /home/vscode/.zshrc/",
		"postStartCommand": "pip3 install --user -r /workspaces/ft_transcendence/srcs/requirements.txt",
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"batisteo.vscode-django",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.vscode-pull-request-github",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"mhutchie.git-graph",
				"ms-vscode.makefile-tools"
			],
			"settings": {
				"editor.tabSize": 4,
				"editor.insertSpaces": true,
				"terminal.integrated.shell.linux": "/bin/zsh",
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.languageServer": "Pylance",
				"editor.defaultFormatter": "ms-python.black-formatter",
				"editor.formatOnSave": true,
				"python.linting.pylintEnabled": false,
				"python.formatting.blackPath": "/usr/local/bin/black",
				"python.formatting.provider": "black",
				"python.analysis.extraPaths": [
					"/workspaces/ft_transcendence/srcs/requirements/django"
				]
			}
		}
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
